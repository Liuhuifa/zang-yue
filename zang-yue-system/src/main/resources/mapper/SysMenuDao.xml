<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zy.system.zangyuesystem.dao.SysMenuDao">

    <resultMap id="BaseResultMap" type="com.zy.system.zangyuesystem.entity.SysMenu">
        <!--@Table sys_menu-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="perName" column="per_name" jdbcType="VARCHAR"/>
        <result property="menuName" column="menu_name" jdbcType="VARCHAR"/>
        <result property="menuIco" column="menu_ico" jdbcType="VARCHAR"/>
        <result property="menuType" column="menu_type" jdbcType="INTEGER"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, per_name, menu_name, menu_ico, menu_type, parent_id
        from zang-yue.sys_menu
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, per_name, menu_name, menu_ico, menu_type, parent_id
        from zang-yue.sys_menu
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, per_name, menu_name, menu_ico, menu_type, parent_id
        from zang-yue.sys_menu
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="perName != null and perName != ''">
                and per_name = #{perName}
            </if>
            <if test="menuName != null and menuName != ''">
                and menu_name = #{menuName}
            </if>
            <if test="menuIco != null and menuIco != ''">
                and menu_ico = #{menuIco}
            </if>
            <if test="menuType != null">
                and menu_type = #{menuType}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into zang-yue.sys_menu(per_name, menu_name, menu_ico, menu_type, parent_id)
        values (#{perName}, #{menuName}, #{menuIco}, #{menuType}, #{parentId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update zang-yue.sys_menu
        <set>
            <if test="perName != null and perName != ''">
                per_name = #{perName},
            </if>
            <if test="menuName != null and menuName != ''">
                menu_name = #{menuName},
            </if>
            <if test="menuIco != null and menuIco != ''">
                menu_ico = #{menuIco},
            </if>
            <if test="menuType != null">
                menu_type = #{menuType},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from zang-yue.sys_menu where id = #{id}
    </delete>

</mapper>