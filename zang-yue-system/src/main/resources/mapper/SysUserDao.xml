<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SysUserDao">
    <resultMap id="BaseResultMap" type="SysUser">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="real_name" jdbcType="VARCHAR" property="realName"/>
        <result column="head_img" jdbcType="VARCHAR" property="headImg"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, username, phone, `password`, real_name, head_img
    </sql>
    <select id="login" parameterType="map" resultType="com.zy.system.zangyuesystem.dto.SysUserDetails">
        select su.id, username, phone, password, real_name, head_img from sys_user su
        <where>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
        </where>
    </select>
</mapper>